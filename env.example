# Multi-Agent Social Media Management System
# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =======================
# CORE n8n CONFIGURATION
# =======================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-domain.com
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# =======================
# DATABASE CONFIGURATION
# =======================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=social_media_agents
DB_POSTGRESDB_USER=postgres
DB_POSTGRESDB_PASSWORD=your_database_password

# =======================
# AI SERVICES
# =======================

# OpenAI (required for GPT-4, DALL-E)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude (optional, for advanced reasoning)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ElevenLabs (required for voice generation)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# HeyGen (required for avatar video generation)
HEYGEN_API_KEY=your-heygen-api-key-here

# =======================
# MCP SERVICES
# =======================

# Composio (for social media platform integrations)
COMPOSIO_API_KEY=comp_live_your-composio-api-key-here

# Zapier (for productivity integrations)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-hook-id
ZAPIER_API_KEY=your-zapier-api-key-here

# News API (for FT News content)
NEWS_API_KEY=your-newsapi-org-key-here

# =======================
# SLACK INTEGRATION
# =======================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# =======================
# SOCIAL MEDIA PLATFORMS
# =======================

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-app-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-app-client-secret

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Instagram/Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# YouTube
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Reddit
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# =======================
# OPTIONAL SERVICES
# =======================

# VEO 3 (Google's video generation)
VEO_3_API_KEY=your-veo-3-api-key-here

# Discord (for community management)
DISCORD_BOT_TOKEN=your-discord-bot-token

# Telegram (for messaging)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =======================
# SYSTEM CONFIGURATION
# =======================

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONTENT_PER_DAY=50

# File storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# Security
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=https://your-domain.com

# =======================
# MONITORING & ANALYTICS
# =======================

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Google Analytics
GA_TRACKING_ID=your-google-analytics-id

# =======================
# BACKUP & STORAGE
# =======================

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# =======================
# EMAIL CONFIGURATION
# =======================

# SMTP for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password 